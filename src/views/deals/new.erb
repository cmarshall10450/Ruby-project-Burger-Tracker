<form action="/deals" method="post">

  <div class="field">
    <label for="name">Name</label>
    <input type="text" name="name" id="name"/>
  </div>

  <div class="field">
    <label for="day">Day</label>
    <select name="day" id="day">
      <% @days.each do |day| %>
          <option value="<%= day %>"><%= day %></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <label for="discount-rate">Discount Rate</label>
    <input type="text" name="discount_rate" id="discount-rate"/>%
  </div>

  <div class="field">
    <label for="eatery">Eatery</label>
    <select name="eatery_id" id="eatery">
      <% @eateries.each do |eatery| %>
          <option value="<%= eatery.id %>"><%= eatery.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-footer">
    <input type="submit" value="Add Deal"/>
  </div>
</form>